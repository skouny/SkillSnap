@* SkillTags Component - Displays skills in a tag-style layout *@

<div class="skill-tags">
    <h3>My Skills</h3>
    <div class="tags-container">
        @foreach (var skill in Skills)
        {
            <span class="skill-tag @GetLevelClass(skill.Level)">
                <strong>@skill.Name</strong> - @skill.Level
            </span>
        }
    </div>
</div>

@code {
    private List<SkillItem> Skills = new()
    {
        new SkillItem { Name = "C#", Level = "Advanced" },
        new SkillItem { Name = "Blazor", Level = "Intermediate" },
        new SkillItem { Name = "ASP.NET Core", Level = "Advanced" },
        new SkillItem { Name = "JavaScript", Level = "Intermediate" },
        new SkillItem { Name = "SQL", Level = "Advanced" },
        new SkillItem { Name = "Git", Level = "Intermediate" }
    };

    private string GetLevelClass(string level)
    {
        return level.ToLower() switch
        {
            "advanced" => "level-advanced",
            "intermediate" => "level-intermediate",
            "beginner" => "level-beginner",
            _ => ""
        };
    }

    public class SkillItem
    {
        public string Name { get; set; } = string.Empty;
        public string Level { get; set; } = string.Empty;
    }
}

<style>
    .skill-tags {
        padding: 2rem;
        max-width: 800px;
        margin: 0 auto;
    }

    .skill-tags h3 {
        margin-bottom: 1.5rem;
        color: #333;
        font-size: 1.8rem;
    }

    .tags-container {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
    }

    .skill-tag {
        display: inline-block;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        transition: transform 0.2s;
    }

    .skill-tag:hover {
        transform: scale(1.05);
    }

    .level-advanced {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .level-intermediate {
        background-color: #fff3cd;
        color: #856404;
        border: 1px solid #ffeaa7;
    }

    .level-beginner {
        background-color: #d1ecf1;
        color: #0c5460;
        border: 1px solid #bee5eb;
    }

    .skill-tag strong {
        font-weight: 600;
    }
</style>
