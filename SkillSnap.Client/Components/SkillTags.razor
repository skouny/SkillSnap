@inject SkillService SkillService
@* SkillTags Component - Displays skills in a tag-style layout *@

<div class="skill-tags">
    <h3>My Skills</h3>
    
    @if (isLoading)
    {
        <p class="loading-message">Loading skills...</p>
    }
    else if (skills == null || !skills.Any())
    {
        <p class="no-data-message">No skills found. Add some skills to showcase your expertise!</p>
    }
    else
    {
        <div class="tags-container">
            @foreach (var skill in skills)
            {
                <span class="skill-tag @GetLevelClass(skill.Level)">
                    <strong>@skill.Name</strong> - @skill.Level
                </span>
            }
        </div>
    }
</div>

@code {
    private List<Skill>? skills;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            skills = await SkillService.GetSkillsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading skills: {ex.Message}");
            skills = new List<Skill>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetLevelClass(string level)
    {
        return level.ToLower() switch
        {
            "advanced" => "level-advanced",
            "intermediate" => "level-intermediate",
            "beginner" => "level-beginner",
            _ => ""
        };
    }
}

<style>
    .skill-tags {
        padding: 2rem;
        max-width: 800px;
        margin: 0 auto;
    }

    .skill-tags h3 {
        margin-bottom: 1.5rem;
        color: #333;
        font-size: 1.8rem;
    }

    .tags-container {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
    }

    .skill-tag {
        display: inline-block;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        transition: transform 0.2s;
    }

    .skill-tag:hover {
        transform: scale(1.05);
    }

    .level-advanced {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .level-intermediate {
        background-color: #fff3cd;
        color: #856404;
        border: 1px solid #ffeaa7;
    }

    .level-beginner {
        background-color: #d1ecf1;
        color: #0c5460;
        border: 1px solid #bee5eb;
    }    .skill-tag strong {
        font-weight: 600;
    }

    .loading-message, .no-data-message {
        text-align: center;
        color: #666;
        font-size: 1.1rem;
        padding: 2rem;
    }
</style>
