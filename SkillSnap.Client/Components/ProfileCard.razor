@* ProfileCard Component - Displays user profile information *@

<div class="profile-card">
    <div class="profile-image">
        <img src="@(string.IsNullOrEmpty(ProfileImageUrl) ? "https://via.placeholder.com/150/667eea/ffffff?text=" + Name[0] : ProfileImageUrl)" 
             alt="@Name" 
             onerror="this.src='https://via.placeholder.com/150/667eea/ffffff?text=User'" />
    </div>
    <div class="profile-info">
        <h2>@Name</h2>
        <p class="bio">@Bio</p>
    </div>
</div>

@code {
    [Parameter]
    public string Name { get; set; } = "John Doe";

    [Parameter]
    public string Bio { get; set; } = "A passionate developer building amazing applications.";

    [Parameter]
    public string ProfileImageUrl { get; set; } = "https://via.placeholder.com/150";
}

<style>
    .profile-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 2rem;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        max-width: 400px;
        margin: 1rem auto;
    }

    .profile-image img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 1rem;
    }

    .profile-info {
        text-align: center;
    }

    .profile-info h2 {
        margin: 0 0 0.5rem 0;
        color: #333;
    }

    .bio {
        color: #666;
        line-height: 1.6;
    }
</style>
