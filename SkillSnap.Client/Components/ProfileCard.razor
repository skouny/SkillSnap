@* ProfileCard Component - Displays user profile information *@

<div class="profile-card">
    <div class="profile-image">
        <img src="@GetProfileImageUrl()" 
             alt="@Name" 
             onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%22150%22 height=%22150%22%3E%3Crect fill=%22%23667eea%22 width=%22150%22 height=%22150%22/%3E%3Ctext fill=%22%23ffffff%22 font-family=%22Arial%22 font-size=%2260%22 x=%2250%25%22 y=%2250%25%22 text-anchor=%22middle%22 dy=%22.3em%22%3EUser%3C/text%3E%3C/svg%3E'" />
    </div>
    <div class="profile-info">
        <h2>@Name</h2>
        <p class="bio">@Bio</p>
    </div>
</div>

@code {
    [Parameter]
    public string Name { get; set; } = "John Doe";

    [Parameter]
    public string Bio { get; set; } = "A passionate developer building amazing applications.";

    [Parameter]
    public string ProfileImageUrl { get; set; } = "";

    private string GetProfileImageUrl()
    {
        if (!string.IsNullOrEmpty(ProfileImageUrl))
            return ProfileImageUrl;
        
        // Generate a data URI for placeholder with first letter of name
        var initial = !string.IsNullOrEmpty(Name) ? Name[0].ToString() : "U";
        return $"data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%22150%22 height=%22150%22%3E%3Crect fill=%22%23667eea%22 width=%22150%22 height=%22150%22/%3E%3Ctext fill=%22%23ffffff%22 font-family=%22Arial%22 font-size=%2260%22 x=%2250%25%22 y=%2250%25%22 text-anchor=%22middle%22 dy=%22.3em%22%3E{initial}%3C/text%3E%3C/svg%3E";
    }
}

<style>
    .profile-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 2rem;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        max-width: 400px;
        margin: 1rem auto;
    }

    .profile-image img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 1rem;
    }

    .profile-info {
        text-align: center;
    }

    .profile-info h2 {
        margin: 0 0 0.5rem 0;
        color: #333;
    }

    .bio {
        color: #666;
        line-height: 1.6;
    }
</style>
